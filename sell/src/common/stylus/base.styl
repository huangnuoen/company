// 全局样式

body, html
	line-height: 1
	font-weight: 200
	font-family: 'PingFang SC', 'STHitisSC-Light', 'Helvetica-Light', arial, sans-serif

// 根据设备像素缩放下边框
@media (-webkit-min-device-pixel-ratio: 1.5), (min-device-pixel-ratio: 1.5)
	.border-1px
		&:after
			transform: scaleY(.7)

@media (-webkit-min-device-pixel-ratio: 2), (min-device-pixel-ratio: 2)
	.border-1px
		&:after
			transform: scaleY(.5)